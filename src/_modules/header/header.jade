header.header
    .container.header__container
            .header__logo
                a(href="/")
                    img(src="/images/logo-mindhub-blanco.png")            
            .header__hamburguer
                span
                span
                span
                    
            nav.header__nav
                ul.header__menu
                    each item in site.data.header
                        li
                            a(href=item.url)= item.name
                                if item.submenu
                                    i.material-icons keyboard_arrow_down
                            if item.submenu
                                ul.header__submenu
                                    each link in item.submenu
                                        li
                                            a(href=link.url)= link.name
